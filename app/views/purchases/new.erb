<div class='container'>
  <%if @errors %>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>  
  <p>please confirm your purchase of shirt # <%= @shirt.id %></p>
  <form action="/purchases/<%= @shirt.id %>" method="post">
    <input type="submit" value="Submit">
  </form>  
</div>